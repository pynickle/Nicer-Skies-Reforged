{
  "branches": [
    "master"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Features" },
            { "type": "fix", "section": "üêõ Bug Fixes" },
            { "type": "docs", "section": "üìö Documentation" },
            { "type": "style", "section": "üíÑ Style Improvements" },
            { "type": "ref", "section": "‚ôªÔ∏è Code Refactoring" },
            { "type": "perf", "section": "‚ö° Performance Improvements" },
            { "type": "test", "section": "‚úÖ Tests" },
            { "type": "build", "section": "üì¶ Build System" },
            { "type": "ci", "section": "üë∑ CI/CD" },
            { "type": "chore", "section": "üîß Miscellaneous Changes" },
            { "type": "imp", "section": "üöÄ Improvements" }
          ]
        },
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./gradlew :jar -Pmod_version=${nextRelease.version}"
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "semantic-release-minecraft",
      {
        "game_versions": "1.21.1",
        "mod_loaders": "neoforge",
        "display_name": "[NeoForge 1.21.1] ${ nextRelease.version }",
        "glob": "build/libs/nicer_skies_reforged-${ nextRelease.version }.jar",
        "curseforge": {
          "project_id": "1388911",
          "java_versions": 21,
          "environments": "client"
        },
        "modrinth": {
          "project_id": "OjSn1HJP",
          "version_number": "${ nextRelease.version }+neoforge"
        }
      }
    ]
  ],
  "preset": "conventionalcommits",
  "releaseRules": [
    {
      "type": "ref",
      "release": "patch"
    },
    {
      "type": "style",
      "release": "patch"
    },
    {
      "type": "imp",
      "release": "patch"
    }
  ]
}